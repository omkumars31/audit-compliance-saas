{
  "compilerOptions": {
    // Node.js Backend Settings
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    // File Structure
    "rootDir": "./src",
    "outDir": "./dist",

    // TypeScript Essentials
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Useful for backend builds
    "sourceMap": true,
    "resolveJsonModule": true,

    // Allow default imports for express or prisma
    "allowSyntheticDefaultImports": true,

    // Remove React / Browser options
    "isolatedModules": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
